<?xml version="1.0" encoding="utf-8"?>
<ca.cours5b5.gabriellevesqueduval.vues.pages.PPartieLocale xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ca.cours5b5.gabriellevesqueduval.vues.controles.VGrille
        android:id="@+id/grille"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:layout_constraintWidth_percent="0.90">

    </ca.cours5b5.gabriellevesqueduval.vues.controles.VGrille>

    <LinearLayout
        android:id="@+id/nomJoueurs"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:textAlignment="center"
        android:padding="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.10">

        <TextView
            android:id="@+id/textViewNom1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:letterSpacing="100"
            android:text="@string/nom1"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewNom2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:letterSpacing="100"
            android:text="@string/nom2"
            android:textAlignment="center" />
    </LinearLayout>

</ca.cours5b5.gabriellevesqueduval.vues.pages.PPartieLocale>